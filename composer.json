{
    "name": "saurabhsharma/phonedotcom",
    "description": "Interact with Phone.com API",
    "type": "library",
    "homepage": "https://github.com/saurabhsharma/Phone.com",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "PhoneDotCom\\": "src/",
            "PhoneDotCom\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Saurabh Sharma",
            "email": "saurabhshram2u@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "sammyjo20/saloon": "^1.2",
        "spatie/data-transfer-object": "^3.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "pestphp/pest": "^1.21",
        "spatie/ray": "^1.33"
    },
    "scripts": {
        "test": [
            "./vendor/bin/pest"
        ],
        "fix-code": [
            "./vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
